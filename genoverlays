#!/usr/bin/env bash
set -euo pipefail
shopt -s inherit_errexit
declare -r fname="videos.txt"
declare -i count=0

# Ensure the input file exists
if [[ ! -f "$fname" ]]; then
  echo "Error: File '$fname' not found!"
  exit 1
fi
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &> /dev/null && pwd)"
# Ensure genoverlay is executable
if [[ ! -x "${SCRIPT_DIR}/genoverlay" ]]; then
  echo "Error: '${SCRIPT_DIR}/genoverlay' script is missing or not executable!"
  exit 1
fi

# Process each line
while IFS= read -r vid; do
  [[ -z "$vid" ]] && continue # Skip empty lines
  ((count++))
  if ! "${SCRIPT_DIR}/genoverlay" "$vid" "$count"; then
    echo "Error: ${SCRIPT_DIR}/genoverlay failed for video ID '$vid'"
    exit 1
  fi
done < "$fname"

exit 0
